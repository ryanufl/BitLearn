{
  "manifest_version": 3,
  "name": "BitLearn",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://api.coingecko.com/"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}


  