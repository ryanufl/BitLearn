{
  "manifest_version": 3,
  "name": "BitLearn",
  "version": "1.0",

  
  "host_permissions": ["https://api.coingecko.com/"],
  "action": {
    "default_popup": "popup.html"

  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://api.coingecko.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"

  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}

